{% extends '_template/base.html.twig' %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <h2>Boutique</h2>
            <div class="row" id="products-container">
                {% for item in items %}
    <div class="col-md-4 mb-4 product" data-category="{{ item.category|lower }}">
        <div class="card">
            <div class="image-container">
                <img src="assets/images/items/{{ item.id }}.jpg" class="card-img-top" alt="{{ item.name }}">
            </div>
            <div class="card-body text-center">
                <h5 class="card-title" style="font-size: 1.1rem; margin-bottom: 5px;">{{ item.name }}</h5> 
                <p class="card-text" style="font-size: 0.9rem; margin-bottom: 5px;">{{ item.price }}€</p>
                <p class="stock-text" style="font-size: 0.85rem; margin-bottom: 5px;">Stock : {{ item.quantity }}</p> 
                <div class="d-flex justify-content-center">
                    <button id="decrease-{{ item.id }}" class="btn btn-outline-secondary btn-sm" onclick="decreaseQuantity('{{ item.id }}')">-</button>
                    <span class="mx-2" id="quantity-{{ item.id }}" data-stock="{{ item.quantity }}">0</span>
                    <button id="increase-{{ item.id }}" class="btn btn-outline-secondary btn-sm" onclick="increaseQuantity('{{ item.id }}','{{ item.quantity }}')">+</button>
                </div>
            </div>
        </div>
    </div>
{% endfor %}

            </div>
        </div>
        <div class="col-md-4">
            <h3>Filtres</h3>  
            <div class="form-check">
                <input type="checkbox" class="form-check-input" id="filterClothes">
                <label class="form-check-label" for="filterClothes">Vêtements</label>
            </div>
            <div class="form-check">
                <input type="checkbox" class="form-check-input" id="filterGoodies">
                <label class="form-check-label" for="filterGoodies">Goodies</label>
            </div>

            <h4>Fourchette de prix</h4>
            <div class="price-slider-container">
                <div class="slider-track"></div>
                <input type="range" id="minPrice" min="0" max="100" value="0" class="range-slider">
                <input type="range" id="maxPrice" min="0" max="100" value="100" class="range-slider">
            </div>
            <div class="d-flex justify-content-between mt-2">
                <span id="minPriceValue">0€</span>
                <span id="maxPriceValue">100€</span>
            </div>

            <div class="mt-4 p-3 border rounded">
                <h3>Votre Panier</h3>
                <p>Adhésion au BDE -10%</p>
                <h4>Total : {{ total }}€</h4>
                <button class="btn btn-dark">Payer</button>
            </div>
        </div>
    </div>
</div>

<style>
/* Style pour uniformiser la taille des images */
.image-container {
    width: 100%;
    height: 150px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #f8f9fa;
    border-radius: 5px;
}

.image-container img {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
}

/* Ajustement de la taille des cartes */
.card {
    height: 300px;
    display: flex;
    flex-direction: column;
}

.card-body {
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding: 10px;
}

/* Réduction de l'espace entre les éléments de texte */
.card-title, .card-text, .stock-text {
    margin-bottom: 5px;
}

.stock-text {
    font-size: 0.85rem;
}

/* Style pour la barre de fourchette de prix */
.price-slider-container {
    position: relative;
    width: 100%;
    height: 5px;
    background: #ddd;
    border-radius: 5px;
    margin-top: 10px;
}

.slider-track {
    position: absolute;
    height: 5px;
    background: #000;
    border-radius: 5px;
    z-index: 1;
}

.range-slider {
    position: absolute;
    width: 100%;
    -webkit-appearance: none;
    appearance: none;
    background: none;
    pointer-events: none;
    z-index: 2;
}

.range-slider::-webkit-slider-thumb {
    -webkit-appearance: none;
    appearance: none;
    width: 16px;
    height: 16px;
    background: #000;
    border-radius: 50%;
    cursor: pointer;
    pointer-events: all;
    position: relative;
    z-index: 3;
}

.range-slider::-moz-range-thumb {
    width: 16px;
    height: 16px;
    background: #000;
    border-radius: 50%;
    cursor: pointer;
    pointer-events: all;
    position: relative;
    z-index: 3;
}

</style>

<script src="assets/js/shop.js"></script>
{% endblock %}