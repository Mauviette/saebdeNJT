{% extends '_template/base.html.twig' %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <h2>Boutique</h2>
            <div class="row" id="products-container">
            {% for item in items %}
                <div class="col-md-4 mb-4 product" data-category="{{ item.category|lower }}">
                <div class="card">
                <div class="image-container">
                <img src="assets/images/items/{{ item.id }}.jpg" class="card-img-top" alt="{{ item.name }}">
                </div>
                    <div class="card-body text-center">
                        <h5 class="card-title" style="font-size: 1.1rem; margin-bottom: 5px;">{{ item.name }}</h5> 
                        <p class="card-text" style="font-size: 0.9rem; margin-bottom: 5px;">{{ item.price }}€</p>
                        <p class="stock-text" style="font-size: 0.85rem; margin-bottom: 5px;">Stock : {{ item.quantity }}</p> 
                            <div class="d-flex justify-content-center">
                                <button id="decrease-{{ item.id }}" class="btn btn-outline-secondary btn-sm" onclick="decreaseQuantity('{{ item.id }}')">-</button>
                                <span class="mx-2" id="quantity-{{ item.id }}" data-stock="{{ item.quantity }}">0</span>
                                <button id="increase-{{ item.id }}" class="btn btn-outline-secondary btn-sm" onclick="increaseQuantity('{{ item.id }}','{{ item.quantity }}')">+</button>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}

            </div>
        </div>

        <div class="col-md-4">
            <h3>Filtres</h3>
            {% for category in categories %}
                <div class="form-check">
                    <input type="checkbox" class="form-check-input filter" id="filter{{ category|capitalize }}">
                    <label class="form-check-label filterName" for="filter{{ category|capitalize }}">{{ category|capitalize }}</label>
                </div>
            {% endfor %}

            <h4>Fourchette de prix</h4>
            <div class="price-slider-container">
                <div class="slider-track"></div>
                <input type="range" id="minPrice" min="0" max="100" value="0" class="range-slider">
                <input type="range" id="maxPrice" min="0" max="100" value="100" class="range-slider">
            </div>
            <div class="d-flex justify-content-between mt-2">
                <span id="minPriceValue">0€</span>
                <span id="maxPriceValue">100€</span>
            </div>

            <div class="mt-4 p-3 border rounded">
                <h3>Votre Panier</h3>
                <div id="cart-items" class="cart-items-container"></div>

                {% if userRole == "utilisateur_adherent" %}
                    <p id="membership-info">Adhésion au BDE -10%</p>
                {% else %}
                    <p id="membership-info">Si vous adhérez au BDE, vous recevrez -10% sur toutes vos commandes !!!</p>
                {% endif %}

                <h4>Total : <span id="cart-total">0€</span></h4>
                <button class="btn btn-dark">Payer</button>
            </div>
        </div>
    </div>
</div>

<style>
/* Style pour uniformiser la taille des images */
.image-container {
    width: 100%;
    height: 150px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #f8f9fa;
    border-radius: 5px;
}

.image-container img {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
}

/* Ajustement de la taille des cartes */
.card {
    height: 300px;
    display: flex;
    flex-direction: column;
}

.card-body {
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding: 10px;
}

/* Réduction de l'espace entre les éléments de texte */
.card-title, .card-text, .stock-text {
    margin-bottom: 5px;
}

.cart-items-container {
    margin-bottom: 10px;
}

.cart-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 5px 0;
    border-bottom: 1px solid #ddd;
}

.cart-item-name {
    flex: 1;
    text-align: left;
}

.cart-item-price {
    flex: 0.3;
    text-align: center;
}

.cart-item-quantity {
    flex: 0.2;
    text-align: right;
}

.stock-text {
    font-size: 0.85rem;
}

/* Barre dynamique entre les deux curseurs de prix */
.price-slider-container {
    position: relative;
    width: 100%;
    height: 5px;
    background: #ddd;
    border-radius: 5px;
    margin-top: 10px;
}

.slider-track {
    position: absolute;
    height: 5px;
    background: black; /* Barre noire */
    border-radius: 5px;
    z-index: 1;
    left: 0%;
    right: 100%;
    transition: left 0.1s, right 0.1s;
}


.range-slider {
    position: absolute;
    width: 100%;
    -webkit-appearance: none;
    appearance: none;
    background: none;
    pointer-events: none;
    z-index: 2;
}

.range-slider::-webkit-slider-thumb {
    -webkit-appearance: none;
    appearance: none;
    width: 16px;
    height: 16px;
    background: #000;
    border-radius: 50%;
    cursor: pointer;
    pointer-events: all;
    position: relative;
    z-index: 3;
}

.range-slider::-moz-range-thumb {
    width: 16px;
    height: 16px;
    background: #000;
    border-radius: 50%;
    cursor: pointer;
    pointer-events: all;
    position: relative;
    z-index: 3;
}

</style>

<script src="assets/js/shop.js"></script>
{% endblock %}