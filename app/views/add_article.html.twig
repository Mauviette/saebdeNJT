{% extends '_template/base.html.twig' %}

{% block body %}
<div class="container my-5">
    <a href="admin.php" class="btn btn-link">‚Üê Retour au menu admin</a>
    <h3 class="text-center">Ajout d'article</h3>
    <form method="POST" action="" class="mt-4">
