{% extends '_template/base.html.twig' %}

{% block body %}
<div class="row">
    <!-- Événements à venir -->
    <div class="col-lg-12 mb-4">
        <h3>Événements</h3>
            <div class="row gy-3">
            {% for event in events_upcoming %}
                <div class="col-12 col-md-6 col-lg-4 mb-4">
                    <a href="/event.php?view={{ event.id }}">
                        <div class="card">
                            <div class="ratio ratio-16x9">
                                <img src="assets/images/events/{{ event.id }}.jpg" class="card-img-top object-fit-cover" alt="{{ event.name }}">
                            </div>
                            <div class="card-body text-center">
                                <h6 class="card-title">{{ event.title }}</h6>
                                <p class="text-muted">Le {{ event.date | date('d F Y') }}</p>
                            </div>
                        </div>
                    </a>
                </div>
            {% endfor %}
            </div>
    </div>

    <!-- Événements passés -->
    <div class="col-lg-12">
        <h4 class="mb-3">Événements Passés</h4>
        <div class="row row-cols-1 row-cols-md-3 g-4">
        {% for event in events_passed %}
            <div class="col-12 col-md-6 col-lg-4 mb-4">
                <a href="/event.php?view={{ event.id }}">
                <div class="card">
                    <div class="ratio ratio-16x9">
                        <img src="assets/images/events/{{ event.id }}.jpg" class="card-img-top object-fit-cover" alt="{{ event.name }}">
                    </div>
                    <div class="card-body text-center">
                        <h6 class="card-title">{{ event.title }}</h6>
                        <p class="text-muted">Le {{ event.date | date('d F Y') }}</p>
                    </div>
                </div>
                </a>
            </div>
            {% endfor %}
        </div>
    </div>
</div>


{% endblock %}
