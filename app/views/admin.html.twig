{% extends '_template/base.html.twig' %}

{% block body %}
<div class="container my-5">
    <h3 class="text-center">Menu Admin</h3>
    
    <!-- Boutons d'ajout -->
    <div class="d-flex justify-content-center my-3">
        <a href="add_article.php" class="btn btn-secondary mx-1">Ajouter un article</a>
        <a href="add_event.php" class="btn btn-secondary mx-1">Ajouter un événement</a>
        <a href="add_produit.php" class="btn btn-secondary mx-1">Ajouter un produit</a>
    </div>

    <!-- Gestion des membres -->
    <h4>Gestion des membres</h4>
    <table class="table table-bordered">
        <thead class="table-secondary">
            <tr>
            <th>Nom d'utilisateur</th>
            <th>Email</th>
            <th>Fonds</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
            <tr>
            <td>{{ user.nom }}</td>
            <td>{{ user.email }}</td>
            <td>{{ user.fonds }}€</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

    <!-- Gestion des commandes -->
    <h4>Gestion des commandes</h4>
    <table class="table table-bordered">
        <thead class="table-secondary">
            <tr>
                <th>Produit</th>
                <th>Quantité</th>
                <th>Acheteur</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Produit B</td>
                <td>1</td>
                <td>janedoe</td>
                <td>
                    <button class="btn btn-success btn-sm">Fait</button>
                </td>
            </tr>
            <tr>
                <td>Produit A</td>
                <td>2</td>
                <td>johndoe</td>
                <td>
                    <button class="btn btn-danger btn-sm">Supprimer</button>
                </td>
            </tr>
        </tbody>
    </table>

    <!-- Section Contacts -->
    <h3>Contacts</h3>
    <div class="border p-4 flex-grow-1">
        <div class="row gy-3">
        
            <!-- Colonne des contacts (scrollable) -->
            <div class="col-md-4 border-end" style="max-height: 650px; overflow-y: auto;">
                <div class="list-group">
                
                    {% for contact in contacts %}
                    <a href="?contact_id={{ contact.id }}" class="list-group-item list-group-item-action {% if contact.id == selected_contact.id %}bg-secondary text-white{% endif %}">
                    <h6 class="mb-1">{{ contact.sujet }}</h6>
                    <p class="mb-1 text-muted">{{ contact.contenu }}</p>
                    </a>
                    {% endfor %}
                </div>
            </div>

            <!-- Colonne des détails du contact sélectionné -->
            <div class="col-md-8">
                
            </div>
        </div>

        
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
    const contactLinks = document.querySelectorAll(".list-group-item");
    const contactDetail = document.querySelector(".col-md-8");

    contactLinks.forEach(link => {
        link.addEventListener("click", function (event) {
            event.preventDefault();
            
            // Retirer la classe active de tous les contacts
            contactLinks.forEach(item => item.classList.remove("bg-secondary", "text-white"));
            
            // Ajouter la classe active au contact sélectionné
            this.classList.add("bg-secondary", "text-white");
            
            // Récupérer les données du contact
            const sujet = this.querySelector("h6").innerText;
            const contenu = this.querySelector("p").innerText;

            // Mettre à jour le contenu de la section détails
            contactDetail.innerHTML = `
                <h2 class="mb-1">${sujet}</h2>
                <p class="mb-1 text-muted">${contenu}</p>
            `;
        });
    });
    });
</script>

