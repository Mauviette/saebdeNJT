{% extends '_template/base.html.twig' %}

{% block body %}
<div class="container my-5">
    <h3 class="text-center">Menu Admin</h3>
    
    <!-- Boutons d'ajout -->
    <div class="d-flex justify-content-center my-3">
        <button class="btn btn-secondary mx-1">Ajouter un article</button>
        <button class="btn btn-secondary mx-1">Ajouter un événement</button>
        <button class="btn btn-secondary mx-1">Ajouter un produit</button>
    </div>

    <!-- Gestion des membres -->
    <h4>Gestion des membres</h4>
    <table class="table table-bordered">
        <thead class="table-secondary">
            <tr>
                <th>Nom d'utilisateur</th>
                <th>Email</th>
                <th>Fonds</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>johndoe</td>
                <td>johndoe@example.com</td>
                <td>100€</td>
            </tr>
            <tr>
                <td>janedoe</td>
                <td>janedoe@example.com</td>
                <td>250€</td>
            </tr>
        </tbody>
    </table>

    <!-- Gestion des commandes -->
    <h4>Gestion des commandes</h4>
    <table class="table table-bordered">
        <thead class="table-secondary">
            <tr>
                <th>Produit</th>
                <th>Quantité</th>
                <th>Acheteur</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Produit B</td>
                <td>1</td>
                <td>janedoe</td>
                <td>
                    <button class="btn btn-success btn-sm">Fait</button>
                </td>
            </tr>
            <tr>
                <td>Produit A</td>
                <td>2</td>
                <td>johndoe</td>
                <td>
                    <button class="btn btn-danger btn-sm">Supprimer</button>
                </td>
            </tr>
        </tbody>
    </table>

    <!-- Contacts reçus -->
    <h4>Contacts Reçus</h4>
    <div class="row">
        <div class="col-md-4">
            <ul class="list-group">
                <li class="list-group-item">Message de johndoe</li>
                <li class="list-group-item">Message de janedoe</li>
            </ul>
        </div>
        <div class="col-md-8 border p-3">
            <p><strong>De :</strong> johndoe@example.com</p>
            <p><strong>Message :</strong> Bonjour, j'ai une question sur votre produit.</p>
        </div>
    </div>
</div>

{% endblock %}